# Server Configuration
PORT=3000
NODE_ENV=production

# Azure Key Vault Configuration (optional - only needed if using Key Vault)
# AZURE_KEY_VAULT_NAME=lungkeyword
# DIRECTLINE_SECRET_NAME=DirectLineSecret

# Direct Line Secret
DIRECTLINE_SECRET=your_directline_secret_here

# Storage Configuration
# Option 1: Use local storage (for development without Azure)
USE_LOCAL_STORAGE=true

# Option 2: Use Azure Blob Storage (comment out USE_LOCAL_STORAGE above and uncomment below)
# AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
# AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
# AZURE_STORAGE_CONTAINER_NAME=your_container_name

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://20.233.67.34,https://20-233-67-34.nip.io,https://yourwordpresssite.com

# Base URL for PDF assets (logo, images)
# IMPORTANT: Change this to your VM IP or domain
# Examples:
#   - VM IP: http://20.233.67.34
#   - nip.io domain: https://20-233-67-34.nip.io
#   - Custom domain: https://yourdomain.com
BASE_URL=http://20.233.67.34

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

